@page "/customer/new"

<RadzenContent>
    <ChildContent>

        <RadzenCard>
            <RadzenRow>
                <RadzenColumn Size="9">
                    <RadzenText TagName="TagName.H1" TextAlign="TextAlign.Left"> <strong>New Customer Request</strong> </RadzenText>


                </RadzenColumn>
                <RadzenColumn Size="3">
                    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.End" Gap="0.5rem" Wrap="FlexWrap.NoWrap">
                        <RadzenButton Variant=Variant.Flat Text="Back" ButtonStyle="ButtonStyle.Primary" />
                        <RadzenButton Variant=Variant.Filled Text="Submit" ButtonStyle="ButtonStyle.Secondary" />
                        <RadzenButton Variant=Variant.Flat Text="Save" ButtonStyle="ButtonStyle.Dark" />

                    </RadzenStack>
                </RadzenColumn>

            </RadzenRow>
        </RadzenCard>
        <br />
        <br />
        <RadzenCard>

            <RadzenRow>
                <RadzenColumn Size="12">
                    <RadzenTabs TabPosition="TabPosition.Left">
                        <Tabs>
                            <RadzenTabsItem Text="General">

                                <div class="row mb-2">
                                    <div class="col-md-3 ">
                                        <RadzenLabel Text="Request Type" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenDropDown TValue="RequestType" AllowClear=true Multiple=false Data="@RequestTypes" class="form-control" />

                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="Change Type" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenDropDown TValue="RequestType" AllowClear=true Multiple=false Data="@RequestTypes" class="form-control" />

                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="FEID" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenTextBox Placeholder="Enter FEID" class="form-control" />

                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="Oracle Account" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenTextBox class="form-control" />

                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="Comments" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenTextArea Rows="2" class="form-control" />
                                    </div>
                                </div>

                            </RadzenTabsItem>
                            <RadzenTabsItem Text="Delivery">
                                <div class="row mb-2">
                                    <div class="col-md-3 ">
                                        <RadzenLabel Text="Amount Requested" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenNumeric TValue="int" class="form-control" />
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="Performance Parts Sales Order" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenTextBox Placeholder="Enter " class="form-control" />


                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="Sample Input" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenTextBox Placeholder="Enter " class="form-control" />

                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-3">
                                        <RadzenLabel Text="Sample Input" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenTextBox Placeholder="Enter " class="form-control" />

                                    </div>
                                </div>

                                <div class="row mb-2">
                                    <div class="col-md-3 ">
                                        <RadzenLabel Text="Status" />

                                    </div>
                                    <div class="col-md-5">
                                        <RadzenDropDown TValue="Status" AllowClear=true Multiple=false Data="@Statuses" class="form-control" />

                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <RadzenListBox @bind-Value=@values Data=@products
                                                   Multiple=true AllowClear=true Placeholder="Select products" Style="width: 100%; max-width: 400px; height: 200px"
                                                   InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select products" }})" />
                                </div>


                            </RadzenTabsItem>
                            <RadzenTabsItem Text="Address">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <RadzenLabel Text="street" />

                                            </div>
                                            <div class="col-md-5">
                                                <RadzenTextBox Placeholder="Enter FEID" class="form-control" />

                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <RadzenLabel Text="City" />

                                            </div>
                                            <div class="col-md-5">
                                                <RadzenTextBox class="form-control" />

                                            </div>
                                        </div>

                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <RadzenLabel Text="State" />

                                            </div>
                                            <div class="col-md-5">
                                                <RadzenTextBox class="form-control" />

                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <RadzenLabel Text="ZipCode" />

                                            </div>
                                            <div class="col-md-5">
                                                <RadzenTextBox Placeholder="Enter " class="form-control" />

                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <RadzenLabel Text="Country" />

                                            </div>
                                            <div class="col-md-5">
                                                <RadzenTextBox class="form-control" />

                                            </div>
                                        </div>

                                        <div class="row mb-2">
                                            <div class="col-md-3">
                                                <RadzenLabel Text="State" />

                                            </div>
                                            <div class="col-md-5">
                                                <RadzenTextBox class="form-control" />

                                            </div>
                                        </div>
                                        <div class="rz-p-sm-12 rz-text-align-center">
                                            <RadzenListBox @bind-Value=@values Data=@products
                                                           Multiple=true AllowClear=true Placeholder="Select products" Style="width: 100%; max-width: 400px; height: 200px"
                                                           InputAttributes="@(new Dictionary<string,object>(){ { "aria-label", "select products" }})" />
                                        </div>
                                    </div>
                                </div>


                            </RadzenTabsItem>
                            <RadzenTabsItem Text="Invoice" />
                            <RadzenTabsItem Text="Internal" />
                            <RadzenTabsItem Text="Attachment">
                                <RadzenCard>
                                    <RadzenUpload>

                                    </RadzenUpload>
                                </RadzenCard>
                            </RadzenTabsItem>
                            <RadzenTabsItem Text="Others" />

                        </Tabs>
                    </RadzenTabs>
                </RadzenColumn>
            </RadzenRow>
        </RadzenCard>
    </ChildContent>
</RadzenContent>



